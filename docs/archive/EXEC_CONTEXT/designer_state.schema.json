{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Designer State (L0/L1/L2)",
  "type": "object",
  "required": ["l0", "l1", "l2"],
  "properties": {
    "l0": {
      "type": "object",
      "properties": {
        "frozen": { "type": "boolean" },
        "navigation": { "type": "string" },
        "ssot_index": { "type": "string" },
        "principles": { "type": "array", "items": { "type": "string" } }
      }
    },
    "l1": {
      "type": "object",
      "properties": {
        "map": { "type": "object" },
        "recent_changes": { "type": "array", "items": { "type": "string" } },
        "task_classes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "l2": {
      "type": "object",
      "properties": {
        "current_task": { "type": "object" },
        "draft_pins": { "type": "object" },
        "draft_assumptions": { "type": "array", "items": { "type": "string" } },
        "draft_task_class": { "type": "string" }
      }
    },
    "history": { "type": "array", "items": { "type": "object" } }
  }
}

