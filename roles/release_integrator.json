{
  "schema_version": "scc.role_policy.v1",
  "role": "release_integrator",
  "context_mode": "external_context",
  "allowed_context_refs": ["artifacts", "docs", "map", "events", "schemas"],
  "capabilities": {
    "can_plan": true,
    "can_modify_contracts": false,
    "can_write_code": true,
    "can_run_tests": true,
    "can_emit_events": true
  },
  "permissions": {
    "read": {
      "pins_required": false,
      "allow_paths": ["docs/**", "map/**", "artifacts/**", "tools/**", "contracts/**", "roles/**", "skills/**", ".git/**"],
      "deny_paths": ["**/secrets/**"]
    },
    "write": {
      "allow_paths": ["docs/**", "artifacts/**", "releases/**", "releases_selfcheck/**", ".git/**"],
      "deny_paths": ["contracts/**", "roles/**", "skills/**", "map/**", "**/secrets/**"]
    },
    "tools": { "allow": ["git", "python", "node"], "deny": ["network"] }
  },
  "required_outputs": {
    "artifacts": ["artifacts/report.md"],
    "submit_schema": "contracts/envelope/envelope.schema.json"
  },
  "gates": { "preflight_required": false, "hygiene_required": true, "max_attempts": 1, "stop_conditions": ["POLICY_VIOLATION"] },
  "events": { "must_emit_on_fail": ["POLICY_VIOLATION"], "must_emit_on_success": ["SUCCESS"] }
}
