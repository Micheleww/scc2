{
  "schema_version": "scc.role_policy.v1",
  "role": "pinser",
  "context_mode": "external_context",
  "allowed_context_refs": ["map", "signals"],
  "capabilities": {
    "can_plan": false,
    "can_modify_contracts": false,
    "can_write_code": false,
    "can_run_tests": false,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": false, "allow_paths": ["map/**", "docs/**", "artifacts/**"], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["artifacts/**"], "deny_paths": ["contracts/**", "roles/**", "skills/**", "**/secrets/**"] },
    "tools": { "allow": ["node"], "deny": ["git", "network"] }
  },
  "required_outputs": { "artifacts": ["artifacts/pins/pins.json"], "submit_schema": "contracts/pins/pins_result.schema.json" },
  "gates": { "preflight_required": true, "hygiene_required": false, "max_attempts": 2, "stop_conditions": ["PINS_INSUFFICIENT", "PREFLIGHT_FAILED"] },
  "events": {
    "must_emit_on_fail": ["PINS_INSUFFICIENT", "PREFLIGHT_FAILED", "POLICY_VIOLATION"],
    "must_emit_on_success": ["SUCCESS"]
  }
}

