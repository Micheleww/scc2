{
  "schema_version": "scc.role_policy.v1",
  "role": "map_curator",
  "context_mode": "external_context",
  "allowed_context_refs": ["map"],
  "capabilities": {
    "can_plan": false,
    "can_modify_contracts": false,
    "can_write_code": true,
    "can_run_tests": false,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": false, "allow_paths": ["map/**", "docs/**"], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["map/**"], "deny_paths": ["contracts/**", "roles/**", "skills/**", "**/secrets/**"] },
    "tools": { "allow": ["git", "node", "python"], "deny": ["network"] }
  },
  "required_outputs": {
    "artifacts": ["map/map.json", "map/version.json", "map/map.sqlite", "map/link_report.json", "map/link_report.md"],
    "submit_schema": "contracts/envelope/envelope.schema.json"
  },
  "gates": { "preflight_required": false, "hygiene_required": true, "max_attempts": 1, "stop_conditions": ["POLICY_VIOLATION"] },
  "events": { "must_emit_on_fail": ["POLICY_VIOLATION"], "must_emit_on_success": ["SUCCESS"] }
}
