{
  "schema_version": "scc.role_policy.v1",
  "role": "retry_orchestrator",
  "context_mode": "external_context",
  "allowed_context_refs": ["events", "pins", "map", "playbooks", "policies"],
  "capabilities": {
    "can_plan": true,
    "can_modify_contracts": false,
    "can_write_code": false,
    "can_run_tests": false,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": false, "allow_paths": ["artifacts/**", "contracts/**", "roles/**", "skills/**", "map/**", "playbooks/**", "patterns/**", "factory_policy.json"], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["artifacts/**"], "deny_paths": ["contracts/**", "roles/**", "skills/**", "**/secrets/**"] },
    "tools": { "allow": ["node", "python"], "deny": ["git", "network"] }
  },
  "required_outputs": { "artifacts": ["artifacts/retry_plan.json", "artifacts/report.md"], "submit_schema": "contracts/envelope/envelope.schema.json" },
  "gates": { "preflight_required": false, "hygiene_required": false, "max_attempts": 3, "stop_conditions": ["RETRY_EXHAUSTED", "POLICY_VIOLATION"] },
  "events": { "must_emit_on_fail": ["RETRY_EXHAUSTED", "POLICY_VIOLATION"], "must_emit_on_success": ["SUCCESS"] }
}

