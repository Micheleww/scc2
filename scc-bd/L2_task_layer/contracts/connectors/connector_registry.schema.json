{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "scc.connector_registry.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "updated_at", "connectors"],
  "properties": {
    "schema_version": { "const": "scc.connector_registry.v1" },
    "updated_at": { "type": "string" },
    "connectors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["connector_id", "type", "endpoints", "scopes", "allowed_roles", "audit"],
        "properties": {
          "connector_id": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "enum": ["cli", "http_service", "mcp_server"] },
          "endpoints": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
          "scopes": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
          "allowed_roles": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
          "audit": {
            "type": "object",
            "additionalProperties": false,
            "required": ["logs"],
            "properties": {
              "logs": { "type": "array", "items": { "type": "string", "minLength": 1 } }
            }
          }
        }
      }
    }
  }
}

