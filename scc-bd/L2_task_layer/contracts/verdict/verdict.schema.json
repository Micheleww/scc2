{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/verdict/verdict.schema.json",
  "title": "SCC Verdict v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "task_id", "verdict", "reasons", "actions"],
  "properties": {
    "schema_version": { "const": "scc.verdict.v1" },
    "task_id": { "type": "string", "minLength": 1 },
    "verdict": { "enum": ["DONE", "RETRY", "ESCALATE"] },
    "reasons": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
