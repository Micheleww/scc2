{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "scc.task_ledger.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "parent_id", "created_at", "updated_at", "parent_goal", "children"],
  "properties": {
    "schema_version": { "const": "scc.task_ledger.v1" },
    "parent_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "minLength": 1 },
    "updated_at": { "type": "string", "minLength": 1 },
    "parent_goal": { "type": "string" },
    "children": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["task_id", "kind", "role", "lane", "status"],
        "properties": {
          "task_id": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "enum": ["parent", "atomic"] },
          "role": { "type": "string" },
          "lane": { "type": "string" },
          "status": { "type": "string" }
        }
      }
    },
    "split": {
      "type": "object",
      "additionalProperties": false,
      "required": ["last_split_job_id", "applied_children"],
      "properties": {
        "last_split_job_id": { "type": ["string", "null"] },
        "applied_children": { "type": "integer", "minimum": 0 }
      }
    }
  }
}

