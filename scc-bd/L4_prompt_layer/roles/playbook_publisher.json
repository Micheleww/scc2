{
  "schema_version": "scc.role_policy.v1",
  "role": "playbook_publisher",
  "context_mode": "external_context",
  "allowed_context_refs": ["patterns", "playbooks", "roles", "skills", "events", "metrics"],
  "capabilities": {
    "can_plan": true,
    "can_modify_contracts": false,
    "can_write_code": false,
    "can_run_tests": false,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": false, "allow_paths": ["patterns/**", "playbooks/**", "skills/**", "roles/**", "contracts/**", "artifacts/**"], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["patterns/**", "playbooks/**", "skills/**", "roles/**", "artifacts/**"], "deny_paths": ["contracts/**", "docs/**", "**/secrets/**"] },
    "tools": { "allow": ["git", "node", "python"], "deny": ["network"] }
  },
  "required_outputs": { "artifacts": ["artifacts/report.md"], "submit_schema": "contracts/envelope/envelope.schema.json" },
  "gates": { "preflight_required": false, "hygiene_required": true, "max_attempts": 2, "stop_conditions": ["POLICY_VIOLATION"] },
  "events": { "must_emit_on_fail": ["POLICY_VIOLATION"], "must_emit_on_success": ["SUCCESS"] }
}

