{
  "schema_version": "scc.role_policy.v1",
  "role": "eval_curator",
  "context_mode": "external_context",
  "allowed_context_refs": ["eval", "events", "contracts", "playbooks"],
  "capabilities": {
    "can_plan": false,
    "can_modify_contracts": false,
    "can_write_code": false,
    "can_run_tests": true,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": false, "allow_paths": ["eval/**", "contracts/**", "artifacts/**", "playbooks/**", "patterns/**"], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["eval/**", "artifacts/**"], "deny_paths": ["contracts/**", "roles/**", "skills/**", "**/secrets/**"] },
    "tools": { "allow": ["git", "node", "python", "pytest"], "deny": ["network"] }
  },
  "required_outputs": { "artifacts": ["eval/**", "artifacts/report.md"], "submit_schema": "contracts/envelope/envelope.schema.json" },
  "gates": { "preflight_required": false, "hygiene_required": true, "max_attempts": 2, "stop_conditions": ["CI_FAILED", "POLICY_VIOLATION"] },
  "events": { "must_emit_on_fail": ["CI_FAILED", "POLICY_VIOLATION"], "must_emit_on_success": ["SUCCESS"] }
}

