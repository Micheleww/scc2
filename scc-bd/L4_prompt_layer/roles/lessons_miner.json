{
  "schema_version": "scc.role_policy.v1",
  "role": "lessons_miner",
  "context_mode": "external_context",
  "allowed_context_refs": ["events", "submits", "logs", "playbooks", "patterns"],
  "capabilities": {
    "can_plan": false,
    "can_modify_contracts": false,
    "can_write_code": false,
    "can_run_tests": false,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": false, "allow_paths": ["artifacts/**", "contracts/**", "patterns/**", "playbooks/**", "skills/**"], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["patterns/**", "playbooks/**", "skills_drafts/**", "artifacts/**"], "deny_paths": ["contracts/**", "roles/**", "skills/**", "**/secrets/**"] },
    "tools": { "allow": ["node", "python"], "deny": ["git", "network"] }
  },
  "required_outputs": { "artifacts": ["patterns/**", "playbooks/**", "skills_drafts/**", "artifacts/report.md"], "submit_schema": "contracts/envelope/envelope.schema.json" },
  "gates": { "preflight_required": false, "hygiene_required": true, "max_attempts": 1, "stop_conditions": ["POLICY_VIOLATION"] },
  "events": { "must_emit_on_fail": ["POLICY_VIOLATION"], "must_emit_on_success": ["SUCCESS"] }
}

