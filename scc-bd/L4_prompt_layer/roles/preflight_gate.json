{
  "schema_version": "scc.role_policy.v1",
  "role": "preflight_gate",
  "context_mode": "blank_cli",
  "allowed_context_refs": ["pins"],
  "capabilities": {
    "can_plan": false,
    "can_modify_contracts": false,
    "can_write_code": false,
    "can_run_tests": true,
    "can_emit_events": true
  },
  "permissions": {
    "read": { "pins_required": true, "allow_paths": [], "deny_paths": ["**/secrets/**"] },
    "write": { "allow_paths": ["artifacts/**"], "deny_paths": ["contracts/**", "roles/**", "skills/**", "**/secrets/**"] },
    "tools": { "allow": ["rg", "node", "python"], "deny": ["git", "network"] }
  },
  "required_outputs": { "artifacts": ["artifacts/preflight.json"], "submit_schema": "contracts/preflight/preflight.schema.json" },
  "gates": { "preflight_required": false, "hygiene_required": true, "max_attempts": 1, "stop_conditions": ["PREFLIGHT_FAILED", "POLICY_VIOLATION"] },
  "events": {
    "must_emit_on_fail": ["PREFLIGHT_FAILED", "POLICY_VIOLATION"],
    "must_emit_on_success": ["SUCCESS"]
  }
}

