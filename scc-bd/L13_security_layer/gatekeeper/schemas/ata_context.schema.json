{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ATA Context v0.2",
  "description": "Schema for ATA (Automated Test Analysis) context files - v0.2",
  "type": "object",
  "required": [
    "task_code",
    "date",
    "owner_role",
    "goal",
    "scope_files",
    "how_to_repro",
    "expected",
    "actual",
    "next_actions",
    "evidence_paths",
    "rollback"
  ],
  "properties": {
    "schema_version": {
      "description": "Schema version (v0.2 is current, v0.1 is deprecated)",
      "type": "string",
      "enum": ["v0.1", "v0.2"]
    },
    "task_code": {
      "description": "Unique task identifier",
      "type": "string"
    },
    "date": {
      "description": "Task date in YYYYMMDD format",
      "type": "string",
      "pattern": "^\\d{8}$"
    },
    "owner_role": {
      "description": "Role of the task owner",
      "type": "string"
    },
    "goal": {
      "description": "Task goal",
      "type": "string"
    },
    "scope_files": {
      "description": "List of files in scope, must be relative paths",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "how_to_repro": {
      "description": "Steps to reproduce the task",
      "type": "string"
    },
    "expected": {
      "description": "Expected outcome",
      "type": "string"
    },
    "actual": {
      "description": "Actual outcome",
      "type": "string"
    },
    "next_actions": {
      "description": "Next steps",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence_paths": {
      "description": "List of evidence paths, must be present and contain only repo_root relative paths",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "rollback": {
      "description": "Rollback plan",
      "type": "string"
    }
  }
}