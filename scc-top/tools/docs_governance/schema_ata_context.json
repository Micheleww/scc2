{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ATA Context",
  "description": "Schema for ATA context.json files",
  "type": "object",
  "required": ["version", "msg_id", "taskcode", "from", "to", "kind", "created_at"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the ATA context schema",
      "pattern": "^v\\d+\\.\\d+\\.\\d+$"
    },
    "msg_id": {
      "type": "string",
      "description": "Unique identifier for the message"
    },
    "taskcode": {
      "type": "string",
      "description": "Associated task code"
    },
    "from": {
      "type": "string",
      "description": "Sender of the message"
    },
    "to": {
      "type": "string",
      "description": "Recipient of the message"
    },
    "kind": {
      "type": "string",
      "description": "Type of the message"
    },
    "created_at": {
      "type": "string",
      "description": "Creation time of the message in ISO 8601 format",
      "format": "date-time"
    },
    "content": {
      "type": "string",
      "description": "Content of the message"
    }
  }
}