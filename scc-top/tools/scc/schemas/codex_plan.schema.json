{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SCC Codex Plan Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["summary", "difficulty", "steps", "risks", "acceptance"],
  "properties": {
    "summary": { "type": "string", "minLength": 1 },
    "difficulty": { "type": "string", "enum": ["low", "medium", "high"] },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "title", "intent", "commands_hint", "artifacts"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "intent": { "type": "string", "minLength": 1 },
          "commands_hint": {
            "type": "array",
            "items": { "type": "string" }
          },
          "artifacts": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" }
    },
    "acceptance": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}

