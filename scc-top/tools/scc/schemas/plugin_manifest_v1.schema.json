{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scc://schemas/plugin_manifest_v1.schema.json",
  "title": "PluginManifestV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "name",
    "version",
    "requires",
    "hooks"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "plugin_manifest_v1"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "requires": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "plugin_api"
      ],
      "properties": {
        "plugin_api": {
          "type": "string"
        }
      }
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "on_startup",
              "on_shutdown",
              "on_tick",
              "before_dispatch",
              "after_dispatch",
              "after_job_finished",
              "after_ci_gate",
              "on_failure_record",
              "on_state_event"
            ]
          },
          "enabled": {
            "type": "boolean",
            "default": true
          }
        }
      }
    },
    "commands": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "evals": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object"
      }
    }
  }
}

