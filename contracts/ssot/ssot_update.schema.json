{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/ssot/ssot_update.schema.json",
  "title": "SCC SSOT Update Suggestion v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_at", "task_id", "sources", "missing", "stale"],
  "properties": {
    "schema_version": { "const": "scc.ssot_update.v1" },
    "generated_at": { "type": "string", "minLength": 1 },
    "task_id": { "type": "string", "minLength": 1 },
    "sources": {
      "type": "object",
      "additionalProperties": false,
      "required": ["map_path", "map_hash", "facts_hash"],
      "properties": {
        "map_path": { "type": "string", "minLength": 1 },
        "map_hash": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" },
        "facts_hash": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
      }
    },
    "missing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["modules", "entry_points", "contracts"],
      "properties": {
        "modules": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "entry_points": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "contracts": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    },
    "stale": {
      "type": "object",
      "additionalProperties": false,
      "required": ["modules", "entry_points", "contracts"],
      "properties": {
        "modules": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "entry_points": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "contracts": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    },
    "notes": { "type": "string" }
  }
}

