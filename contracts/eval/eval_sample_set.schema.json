{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/eval/eval_sample_set.schema.json",
  "title": "SCC Eval Sample Set v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "pattern_id", "updated_at", "task_ids"],
  "properties": {
    "schema_version": { "const": "scc.eval_sample_set.v1" },
    "pattern_id": { "type": "string", "minLength": 1 },
    "updated_at": { "type": "string", "minLength": 1 },
    "task_ids": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
    "notes": { "type": ["string", "null"] },
    "strict_required": { "type": "boolean", "default": true },
    "min_pass": { "type": "integer", "minimum": 0, "maximum": 20, "default": 1 }
  }
}

