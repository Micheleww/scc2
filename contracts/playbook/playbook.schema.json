{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/playbook/playbook.schema.json",
  "title": "SCC Playbook v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "playbook_id", "version", "pattern_id", "enablement", "actions"],
  "properties": {
    "schema_version": { "const": "scc.playbook.v1" },
    "playbook_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "pattern_id": { "type": "string", "minLength": 1 },
    "lifecycle": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["stage"],
      "properties": {
        "stage": { "enum": ["draft", "candidate", "active", "deprecated"] },
        "updated_at": { "type": ["string", "null"] }
      }
    },
    "enablement": { "$ref": "contracts/enablement/enablement.schema.json" },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type"],
        "properties": {
          "type": { "enum": ["route", "add_pin", "run_smoke", "split_v2", "open_dlq", "note"] },
          "lane": { "type": ["string", "null"] },
          "role": { "type": ["string", "null"] },
          "params": { "type": ["object", "null"], "additionalProperties": true }
        }
      }
    },
    "notes": { "type": ["string", "null"] }
  }
}
