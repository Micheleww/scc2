{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SCC Context Pack v1 (slot-based)",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "context_pack_id", "run_id", "created_at", "mode", "slots", "hash"],
  "properties": {
    "schema_version": { "const": "scc.context_pack.v1" },
    "context_pack_id": { "type": "string", "minLength": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "minLength": 1 },
    "mode": { "type": "string", "minLength": 1 },
    "budget_tokens": { "type": ["number", "null"] },
    "hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
    "slots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["slot", "kind"],
        "properties": {
          "slot": { "type": "integer", "minimum": 0, "maximum": 6 },
          "kind": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}

