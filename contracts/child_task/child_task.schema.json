{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/child_task/child_task.schema.json",
  "title": "SCC Child Task v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "goal", "role", "files", "allowedTests", "pins"],
  "properties": {
    "title": { "type": "string", "minLength": 1, "maxLength": 240 },
    "goal": { "type": "string", "minLength": 1 },
    "status": { "type": "string" },
    "role": { "type": "string", "minLength": 1 },
    "skills": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "pointers": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "docs": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "rules": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "maps": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    },
    "files": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
    "required_symbols": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "allowedTests": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
    "allowedExecutors": { "type": "array", "items": { "enum": ["codex", "opencodecli"] } },
    "allowedModels": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "runner": { "enum": ["external", "internal"] },
    "task_class_id": { "type": "string" },
    "task_class_candidate": { "type": "string" },
    "task_class_params": { "type": "object", "additionalProperties": true },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "acceptance": { "type": "array", "items": { "type": "string" } },
    "acceptance_template": { "type": "string" },
    "stop_conditions": { "type": "array", "items": { "type": "string" } },
    "stop_codes": { "type": "array", "items": { "type": "string" } },
    "toolingRules": { "type": "object", "additionalProperties": true },
    "pins": { "$ref": "#/definitions/pinsSpec" },
    "pins_instance": { "$ref": "#/definitions/pinsInstanceSpec" }
  },
  "definitions": {
    "pinsSpec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowed_paths"],
      "properties": {
        "allowed_paths": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
        "forbidden_paths": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "symbols": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "line_windows": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 },
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "max_files": { "type": "integer", "minimum": 1, "maximum": 100 },
        "max_loc": { "type": "integer", "minimum": 1, "maximum": 2000 },
        "ssot_assumptions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "pinsInstanceSpec": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "template_id": { "type": "string" },
        "allowed_paths_add": { "type": "array", "items": { "type": "string" } },
        "forbidden_paths_add": { "type": "array", "items": { "type": "string" } },
        "symbols_add": { "type": "array", "items": { "type": "string" } },
        "line_windows": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 },
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "max_files": { "type": "integer", "minimum": 1, "maximum": 100 },
        "max_loc": { "type": "integer", "minimum": 1, "maximum": 2000 },
        "ssot_assumptions": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
