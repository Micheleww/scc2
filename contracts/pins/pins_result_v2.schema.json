{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contracts/pins/pins_result_v2.schema.json",
  "title": "SCC Pins Result v2 (Audited Pins)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "task_id", "pins"],
  "properties": {
    "schema_version": { "const": "scc.pins_result.v2" },
    "task_id": { "type": "string", "minLength": 1 },
    "pins": { "$ref": "#/definitions/pinsSpecV2" },
    "recommended_queries": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "preflight_expectation": { "type": "object", "additionalProperties": true }
  },
  "definitions": {
    "pinItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "reason", "read_only", "write_intent"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "reason": { "type": "string", "minLength": 1 },
        "read_only": { "type": "boolean" },
        "write_intent": { "type": "boolean" },
        "symbols": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "line_windows": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "type": "integer", "minimum": 1 },
            "minItems": 2,
            "maxItems": 2
          }
        }
      }
    },
    "pinsSpecV2": {
      "type": "object",
      "additionalProperties": false,
      "required": ["items"],
      "properties": {
        "items": { "type": "array", "minItems": 1, "items": { "$ref": "#/definitions/pinItem" } },

        "allowed_paths": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
        "forbidden_paths": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "symbols": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "line_windows": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": "integer", "minimum": 1 },
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "max_files": { "type": "integer", "minimum": 1, "maximum": 100 },
        "max_loc": { "type": "integer", "minimum": 1, "maximum": 2000 },
        "ssot_assumptions": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}

